############################################
# Core Application
############################################

NODE_ENV=production
APP_NAME=ai-outreach-automation
APP_ENV=development

############################################
# n8n Configuration
############################################

N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=https

N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

N8N_ENCRYPTION_KEY=
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

WEBHOOK_URL=https://your-domain.com
GENERIC_TIMEZONE=UTC

############################################
# Database (PostgreSQL)
############################################

DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=
DB_POSTGRESDB_PASSWORD=
DB_POSTGRESDB_SCHEMA=public

############################################
# OpenAI (AI Personalization & Reply Bot)
############################################

OPENAI_API_KEY=
OPENAI_MODEL_PRIMARY=gpt-4o
OPENAI_MODEL_LIGHT=gpt-4o-mini

############################################
# Apollo (Lead Acquisition)
############################################

APOLLO_API_KEY=

############################################
# Apify (Scraping)
############################################

APIFY_API_TOKEN=

############################################
# SerpAPI (Research & Enrichment)
############################################

SERPAPI_API_KEY=

############################################
# Unipile (LinkedIn Automation)
############################################

UNIPILE_API_KEY=
UNIPILE_ACCOUNT_ID=
UNIPILE_BASE_URL=https://api.unipile.com

############################################
# Google APIs (Sheets & Gmail)
############################################

GOOGLE_PROJECT_ID=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=

############################################
# Gmail (Email Outreach)
############################################

GMAIL_FROM_EMAIL=
GMAIL_REPLY_TO=

############################################
# Rate Limiting & Safety Controls
############################################

LINKEDIN_INVITE_DAILY_LIMIT=30
EMAIL_DAILY_LIMIT=50

RANDOM_WAIT_MIN_SECONDS=3
RANDOM_WAIT_MAX_SECONDS=15

############################################
# Feature Flags
############################################

ENABLE_EMAIL_OUTREACH=true
ENABLE_LINKEDIN_OUTREACH=true
ENABLE_AI_REPLY_BOT=true
ENABLE_DEBUG_LOGS=false
